{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",           // Changed from CommonJS
    "moduleResolution": "bundler", // Added
    "declaration": true,
    "outDir": "dist",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true       // Added for better compatibility
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}